<div class="author">
  <h1 class="author_heading">Welcome to NabilConveys</h1>
  <p class="author_body">Conveying the message of God Almighty to the pondering souls.</p>
</div>

<img src="/img/hero-image.webp" alt="person looking out..." class="hero-image" width="981" height="528">

<section class="articles">
  <h2 class="article__heading">Latest Posts</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>
      <li>
        <a href="/post/<%= post._id %>">
          <span><%= post.title %></span>
          <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
        </a>
      </li>
    <% }) %>
    
    
  </ul>

  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>
  
</section>